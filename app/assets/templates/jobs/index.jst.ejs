<h2>Create a new Job</h2>

<form id="new-job">
  <p>
	<label for="new-job-title">Title</label>
	<input name="new-job-title" id="new-job-title" type="text">
  </p>
  <textarea name="new-job-content" id="new-job-content"></textarea>
  <p>
	<label for="new-job-keywords">Keywords</label>
	<input name="new-job-keywords" id="new-job-keywords" type="text">
  </p>  
  <input type="submit">
</form><!-- #new-job -->

<hr>

<% _.each(jobs, function (job) { %>
  <div class="job">
	<h3><%= job.title %></h3>
	<p><%= job.description %></p>
	<% if (typeof job.keywords == 'string') { %>
		<span class="keyword"><%= job.keywords %></span>
	<% } else if (typeof job.keywords == 'array') { 
		_.each(job.keywords, function (keyword) { %>
			<span class="keyword"><%= keyword %></span>
		<% }); 
	} else { %>
		<span class="keywords">No Keywords ( keywords == null :-S )</span>
	<% } %>
	<p><a href="#" class="remove-job" id="<%= job._id %>">Remove Job</a></p>
  </div><!-- .job -->
  <hr>
<% }); %>

